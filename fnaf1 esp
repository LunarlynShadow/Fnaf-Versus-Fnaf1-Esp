Callback = function(Value)
    local workspace = game:GetService("Workspace")
    local highlights = {}

    local colors = {
        Bonnie = Color3.fromRGB(81,46,255),
        Chica = Color3.fromRGB(255,247,1),
        Endo = Color3.fromRGB(79,79,79),
        Foxy = Color3.fromRGB(188,0,3),
        Freddy = Color3.fromRGB(75,41,14),
        ["Golden Freddy"] = Color3.fromRGB(255,177,82)
    }

    local function addHighlight(model, color)
        if model and not model:FindFirstChildOfClass("Highlight") then
            local hl = Instance.new("Highlight")
            hl.Adornee = model
            hl.FillColor = color
            hl.OutlineColor = color
            hl.Parent = model
            table.insert(highlights, hl)
        end
    end

    if Value then
        -- ESP AÃ§
        for name, color in pairs(colors) do
            local model = workspace:FindFirstChild(name)
            if model then addHighlight(model, color) end
        end

        local animFolder = workspace:FindFirstChild("Animatronics")
        if animFolder then
            local functional = animFolder:FindFirstChild("Functional Animatronics")
            if functional then
                local foxy = functional:FindFirstChild("Foxy")
                addHighlight(foxy, Color3.fromRGB(94,0,2))
            end
        end

        -- Yeni eklenecekleri dinle
        highlights.ChildAddedConnection = workspace.ChildAdded:Connect(function(child)
            if colors[child.Name] then addHighlight(child, colors[child.Name]) end
            if child.Name == "Animatronics" then
                task.wait(1)
                local functional = child:FindFirstChild("Functional Animatronics")
                if functional then
                    addHighlight(functional:FindFirstChild("Foxy"), Color3.fromRGB(94,0,2))
                end
            end
        end)
    else
        -- ESP Kapat
        for _, hl in pairs(highlights) do
            if hl then hl:Destroy() end
        end
        highlights = {}
        if highlights.ChildAddedConnection then
            highlights.ChildAddedConnection:Disconnect()
        end
    end
end
